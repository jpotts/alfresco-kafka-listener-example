<?xml version="1.0" encoding="UTF-8"?>
<configuration packages="com.metaversant.kafka" monitorInterval="30">
    <properties>
        <property name="pattern">[ %d{yyyy/MM/dd HH:mm:ss,SSS} ][ %5p ][ %t ][ %c{1} ]%m%n</property>
        <property name="hostName">${hostName}</property>
    </properties>

    <appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${pattern}"/>
        </Console>
    </appenders>

    <loggers>
        <root level="INFO">
            <appender-ref ref="Console"/> <!-- To console -->
        </root>
        <logger name="com.metaversant.kafka" additivity="false" level="DEBUG">
            <appender-ref ref="Console" />
        </logger>
    </loggers>
</configuration>